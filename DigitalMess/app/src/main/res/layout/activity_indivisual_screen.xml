<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#cccccc"
    android:gravity="center"
    tools:context="com.baren.user.digitalmess.SplashScreen"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Individual Payment Calculation"
        android:id="@+id/textView5"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Member Name :"
            android:id="@+id/membername"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/etnmember"
            android:hint="Name"
            android:layout_weight="1"
            android:drawableRight="@drawable/dropdown"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Deposit Amount:"
            android:id="@+id/textView"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/etndiposit"
            android:hint="Enter Deposit"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No of Meal :"
            android:id="@+id/textView2"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Enter Your Meal"
            android:id="@+id/etnmeal"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Guest :"
            android:id="@+id/textView3"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Enter Your Guest"
            android:id="@+id/etnguest"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your EC Charge :"
            android:id="@+id/textView4"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Enter Your EC"
            android:id="@+id/etnyourec"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Your Bill"
        android:id="@+id/btngetbill" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill"
        android:id="@+id/tvbill" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Save "
        android:id="@+id/btnsave" />



</LinearLayout>
