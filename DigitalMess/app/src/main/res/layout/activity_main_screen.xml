<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#cccccc"
    android:gravity="center"
    tools:context="com.baren.user.digitalmess.SplashScreen"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calculate Meal Charge"
        android:id="@+id/textView5"
        android:layout_marginBottom="50dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Expenditure :"
            android:id="@+id/textView"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/etnexpen"
            android:hint="Enter Total Expen."
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total EC :"
            android:id="@+id/textView2"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Enter Total EC"
            android:id="@+id/etnec"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Guest :"
            android:id="@+id/textView3"
            android:layout_weight="1"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Enter Total Guest "
            android:id="@+id/etnguest"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Meal :"
            android:id="@+id/textView4"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:hint="Enter Total Meal "
            android:id="@+id/etnmeal"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_edittext"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Meal Charge"
        android:id="@+id/btnmealcharge" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get EC Rate"
        android:id="@+id/btnecrate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save and next"
        android:id="@+id/btnsavenext" />



</LinearLayout>
